<section id="workexp_<%= work_experience.id %>"
         class="panel panel-default panel-work-experience
                <% if work_experience.end_date %>
                  current-work-experience
                <% else %>
                  past-work-experience
                <% end %>"
  >
  <div class="panel-heading">
    <h4 class="panel-title clearfix">
      <span class="pull-left">
        <%= work_experience.position %><br />
        <small><%= work_experience.organization %></small>
      </span>
      <span class="pull-right date-range">
        <%= work_experience.date_range %>

        <% if user_signed_in? and work_experience.user_id == current_user.id %>
          <%= link_to edit_manage_work_experience_path(work_experience), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= icon 'fas', 'pencil-alt h-5 w-5 inline-block mr-4', title: 'Edit' %>
          <%- end -%>
          <%= link_to manage_work_experience_path(work_experience), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= icon 'fas', 'times h-5 w-5 inline-block mr-4', title: 'Delete' %>
          <%- end -%>
        <% end %>
      </span>
    </h4>
  </div>
  <% if work_experience.description.length > 0 %>
  <div class="panel-body">
    <div class="flex">
      <div class="w-12/12">
        <p><%= markdown(work_experience.description) %></p>
      </div>
    </div>
  </div>
  <% end %>
</section>
