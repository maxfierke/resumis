<% page_title "Project Categories" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Created</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_categories.each do |project_category| %>
      <tr>
        <td><%= project_category.name %></td>
        <td><%= project_category.slug %></td>
        <td><%= time_ago_in_words(project_category.created_at) %> ago</td>
        <td>
          <%= link_to edit_manage_project_category_path(project_category), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= icon 'fas', 'pencil-alt' %>
          <%- end -%>
          <%= link_to manage_project_category_path(project_category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= icon 'fas', 'times' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :actionbar_left do %>
  <%= paginate @project_categories %>
<% end %>

<% content_for :actionbar_right do %>
  <%= link_to new_manage_project_category_path, :class => 'btn btn-primary' do %>
    <%= icon 'fas', 'plus', 'New Project Category' %>
  <% end %>
<% end %>
