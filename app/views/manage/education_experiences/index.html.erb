<% page_title "Education Experiences" %>

<div class="flex flex-col">
  <% @education_experiences.each do |education_experience| %>
    <div class="w-full rounded bg-white overflow-hidden shadow-lg px-6 py-4 mb-6">
      <div class="flex">
        <div class="flex-1">
          <h4 class="mb-2 text-xl">
            <%= link_to edit_manage_education_experience_path(education_experience), class: 'underline' do -%>
              <%= education_experience.school_name %>
            <%- end -%>
          </h4>
          <small class="text-sm mb-4 block"><%= education_experience.diploma %></small>
          <div class="mb-4">
            <%= markdown(education_experience.description) -%>
          </div>
          <footer class="text-sm text-gray-600">
            Updated <%= time_ago_in_words(education_experience.updated_at) %> ago
          </footer>
        </div>
        <div class="flex-grow-0 ml-6">
          <div class="flex items-center">
            <span class="mr-2">
              <%= education_experience.date_range %>
            </span>
            <%= link_to edit_manage_education_experience_path(education_experience), class: 'btn btn-xs' do %>
              <%= icon 'fas', 'pencil-alt h-4 w-4 inline-block', title: 'Edit' %>
            <% end %>
            <%= link_to manage_education_experience_path(education_experience), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' do %>
              <%= icon 'fas', 'times h-4 w-4 inline-block', title: 'Delete' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% content_for :actionbar_left do %>
  <%= paginate @education_experiences %>
<% end %>

<% content_for :actionbar_right do %>
  <%= link_to new_manage_education_experience_path, :class => 'btn btn-primary' do %>
    <%= icon 'fas', 'plus h-5 w-5 inline-block mr-4', 'New Education Experience' %>
  <% end %>
<% end %>
