<%= form_for [:manage, @education_experience] do |f| %>
  <div class="flex flex-col md:flex-row">
    <div class="w-full md:w-3/4 md:mr-3">
      <div class="form-group">
        <%= f.label :school_name, class: 'control-label' %>
        <%= f.text_field :school_name, class: 'text_field form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :diploma, class: 'control-label' %>
        <%= f.text_field :diploma, class: 'text_field form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_area :description, class: 'text_area form-control', rows: '8', :"data-provide" => "markdown", :'data-iconlibrary' => 'fa' %>
      </div>
    </div>
    <div class="w-full md:w-4/12 md:pl-3">
      <div class="w-full rounded bg-white overflow-hidden shadow-lg px-6 py-4 mb-6">
        <h3 class="font-medium mb-4 text-gray-700">Experience Details</h3>

        <div class="form-group">
          <%= f.label :start_date, class: 'control-label' %>
          <div class="flex justify-between">
            <%= f.date_select :start_date, { start_year: 1970 }, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :end_date, class: 'control-label' %>
          <div class="flex justify-between">
            <%= f.date_select :end_date, { include_blank: true, start_year: 1970 }, { class: 'form-control' } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="actionbar actionbar-fixed-bottom">
    <div class="actionbar-left">
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  manage_education_experiences_path, class: 'btn btn-default' %>
    </div>
    <div class="actionbar-right">
      <% unless @education_experience.new_record? %>
        <%= link_to t('.destroy', default: t("helpers.links.destroy")),
                      manage_education_experiences_path(@education_experience), method: 'DELETE', data: { confirm: 'Are you sure?' }, class: 'btn btn-link link-danger' %>
      <% end %>
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
