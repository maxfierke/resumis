<%= form_for([:manage, @post_category]) do |f| %>
  <% if @post_category.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong class="font-bold">
        <%= pluralize(@post_category.errors.count, "error") %>
        prohibited this category from being saved:
      </strong>

      <ul class="list-disc list-inside">
      <%- @post_category.errors.full_messages.each do |message| -%>
        <li><%= message %></li>
      <%- end -%>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'text_field form-control' %>
  </div>

  <div class="actionbar actionbar-fixed-bottom">
    <div class="actionbar-left">
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  manage_posts_path, :class => 'btn btn-default' %>
    </div>
    <div class="actionbar-right">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
