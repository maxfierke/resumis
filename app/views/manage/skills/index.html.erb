<% page_title "Skills" %>
<% content_for :actionbar_right do %>
  <div class="btn-group">
    <%= link_to new_manage_skill_category_path, class: 'btn btn-primary' do %>
      <%= icon 'fas', 'plus', 'Add New Skill Category' %>
    <% end %>
  </div>
<% end %>

<% @skills_with_cat.each do |skill_cat| %>
<h4>
  <%= skill_cat.name %>
  <%= link_to edit_manage_skill_category_path(skill_cat), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
    <%= icon 'fas', 'pencil-alt' %>
  <%- end -%>
  <%= link_to manage_skill_category_path(skill_cat), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
    <%= icon 'fas', 'times' %>
  <%- end -%>
</h4>
<div class="list-group">
  <% skill_cat.skills.each do |skill| %>
  <div class="list-group-item list-group-item-inline-block">
    <%= skill.name %>
    <div class="btn-group">
      <%= link_to edit_manage_skill_category_skill_path(skill_cat, skill), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
        <%= icon 'fas', 'pencil-alt' %>
      <%- end -%>
      <%= link_to manage_skill_category_skill_path(skill_cat, skill), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
        <%= icon 'fas', 'times' %>
      <%- end -%>
    </div>
  </div>
  <% end %>
  <%= link_to new_manage_skill_category_skill_path(skill_cat), class: 'list-group-item list-group-item-inline-block' do %>
    <%= icon 'fas', 'plus', "Add #{skill_cat.name.singularize}" %>
  <% end %>
</div>
<% end %>

<%= paginate @skills_with_cat %>
