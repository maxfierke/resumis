<% page_title "Skill Categories" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @skill_categories.each do |skill_category| %>
      <tr>
        <td><%= skill_category.name %></td>
        <td><%= time_ago_in_words(skill_category.created_at) %> ago</td>
        <td>
          <%= link_to edit_manage_skill_category_path(skill_category), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= icon 'fas', 'pencil-alt' %>
          <%- end -%>
          <%= link_to manage_skill_category_path(skill_category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= icon 'fas', 'times' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :actionbar_left do %>
  <%= paginate @skill_categories %>
<% end %>

<% content_for :actionbar_right do %>
  <%= link_to "New Category", new_manage_skill_category_path, :class => 'btn btn-primary' %>
<% end %>
