<% page_title "Projects" %>

<div class="list-group">
  <% @projects.each do |project| %>
    <div class="list-group-item">
      <div class="row">
        <div class="col-xs-10 col-sm-11">
          <h4>
            <%= link_to edit_manage_project_path(project) do %>
              <%= project.name -%>
            <% end %>
            <% if project.status %>
              <span class="project-status label label-default label-<%= project.status.slug %>">
                <%= project.status.name %>
              </span>
            <% end %>
          </h4>
          <h6 class="text-muted">
            Updated <%= time_ago_in_words(project.updated_at) %> ago
          </h6>
        </div>
        <div class="col-xs-2 col-sm-1">
          <%= link_to edit_manage_project_path(project), class: 'btn btn-xs' do %>
            <%= icon 'fas', 'pencil-alt', '' %>
          <% end %>
          <%= link_to manage_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' do %>
            <%= icon 'fas', 'times', '' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% content_for :actionbar_left do %>
  <%= paginate @projects %>
<% end %>

<% content_for :actionbar_right do %>
<div class="btn-group dropup">
  <%= link_to new_manage_project_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus', 'Add' %>
  <% end %>
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu right" role="menu">
    <li><%= link_to "New Project", new_manage_project_path %></li>
    <li><%= link_to "New Project Category", new_manage_project_category_path %></li>
  </ul>
</div>
<% end %>
