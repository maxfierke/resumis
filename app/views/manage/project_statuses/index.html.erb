<% page_title "Project Statuses" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Created</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_statuses.each do |project_status| %>
      <tr>
        <td><%= project_status.name %></td>
        <td><%= project_status.slug %></td>
        <td><%= time_ago_in_words(project_status.created_at) %> ago</td>
        <td>
          <%= link_to edit_manage_project_status_path(project_status), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= icon 'fas', 'pencil-alt' %>
          <%- end -%>
          <%= link_to manage_project_status_path(project_status), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= icon 'fas', 'times' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :actionbar_left do %>
  <%= paginate @project_statuses %>
<% end %>

<% content_for :actionbar_right do %>
  <%= link_to new_manage_project_status_path, :class => 'btn btn-primary' do %>
    <%= icon 'fas', 'plus', 'New Status' %>
  <% end %>
<% end %>
