<%= form_for @education_experience, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :school_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :school_name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :start_date, {}, :class => 'form-control', :style => 'max-width: 100px; display:inline-block;' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :end_date, {}, :class => 'form-control', :style => 'max-width: 100px; display:inline-block;' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :user_id, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  education_experiences_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
